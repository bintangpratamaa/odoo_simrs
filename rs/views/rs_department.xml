<odoo>

    <!-- form -->
    <record id="ir_ui_view_rs_department_form" model="ir.ui.view">
        <field name="name">rs_department_form</field>
        <field name="model">hr.department</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form string="Department Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- list / tree / tabular -->
    <record id="ir_ui_view_rs_department_tree" model="ir.ui.view">
        <field name="name">rs_department_tree</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <tree string=" Tree">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- action -->
     <record id="ir_action_act_window_rs_installation_department" model="ir.actions.act_window">
        <field name="name">Installations/Departments</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>