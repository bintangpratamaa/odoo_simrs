<odoo>
    <data>

        <!-- action -->
        <record id="ir_actions_act_window_department" model="ir.actions.act_window">
            <field name="name">Departmen</field>
            <field name="res_model">rs_installation</field>
        </record>

        <!-- form -->
        <record id="ir_ui_view_department_form" model="ir.ui.view">
            <field name="name">department_form</field>
            <field name="model">rs_installation</field>
            <field name="arch" type="xml">
                <form string="departmen Form">
                    <sheet>
                        <group>
                            <field name="rs_installation_id"/>
                        </group>
                    </sheet>
                    <!-- chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- list / tree / tabular -->
        <record id="ir_ui_view_department_tree" model="ir.ui.view">
            <field name="name">departmen_tree</field>
            <field name="model">rs_installation</field>
            <field name="arch" type="xml">
                <tree string="departmen Tree">
                    <field name="rs_installation_id"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>